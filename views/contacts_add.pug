extends layout

block content
  h1= title
  p Use the form below to add a contact 
  hr
  if msg 
     p(class='redtext')=msg
  form(method='POST' action='/contacts/add')
    input(type='text' name='firstName')
    | 
    input(type='text' name='lastName')
    | 
    input(type='text' name='emailAdd')
    | 
    button(type='submit') Create Contact 
    | 
    a(href='/contacts') Cancel
